@{
    ViewBag.Title = "Dashboard";
}

<div class="jumbotron">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="@Url.Action("Dashboard", "Course", new { Id = ViewBag.Courses[Model].Id })">Dashboard</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("StartTopic", "Course", new { Id = ViewBag.Courses[Model].Id })">Topic</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("StartQuiz", "Course", new { Id = ViewBag.Courses[Model].Id })">Quiz</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Leaderboard", "Course", new { Id = ViewBag.Courses[Model].Id })">Leaderboard</a>
        </li>
    </ul>
    <br /><br />

    <h2>@ViewBag.Title</h2>

    <hr class="my-4">
    <h3>Welcome to the @ViewBag.Courses[Model].Display Course!</h3>
    <p class="lead">@ViewBag.Courses[Model].TagLine</p>
    <p>Course Score: @ViewBag.Data.CourseScore[Model]</p>
    <p>Course Level: @ViewBag.Data.Levels[Model]</p>
    <p>Get started with your learning journey today.</p>
    <div class="row">
        <div class="col-4">
            <a class="btn btn-success col-12 btn-lg" href="@Url.Action("StartTopic", "Course", new { Id = ViewBag.Courses[Model].Id })" role="button">Topic</a>
        </div>
        <div class="col-4">
            <a class="btn btn-success col-12 btn-lg" href="@Url.Action("StartQuiz", "Course", new { Id = ViewBag.Courses[Model].Id })" role="button">Quiz</a>
        </div>
        <div class="col-4">
            <a class="btn btn-success col-12 btn-lg" href="@Url.Action("Leaderboard", "Course", new { Id = ViewBag.Courses[Model].Id })" role="button">Leaderboard</a>
        </div>
    </div>

    @if (ViewBag.Data.CollectedCertificate[Model] == 1)
    {
        <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
            Congratulations, you've earned your certificate for this course. <a href="@Url.Action("Collections", "Home")" class="alert-link">View Certificate</a>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>